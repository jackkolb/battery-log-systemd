Unit]
Description=Collects battery percent, capacity, and power draw

[Service]
ExecStart=/bin/bash -c "echo $EPOCHSECONDS $(acpi -i | tr ' ' '\n' | tr ',' '\n' | grep % | tr '\n' ' ') $(awk '{print $1*10^-6}' /sys/class/power_supply/BAT0/power_now)W >> $HOME/.batterylog

[Install]
WantedBy=multi-user.target
